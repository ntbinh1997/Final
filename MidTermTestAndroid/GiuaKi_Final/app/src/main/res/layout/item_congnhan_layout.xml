<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:background="@color/lightGray"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_marginBottom="8dp">
        <TextView
            android:background="@color/colorPrimaryDark"
            android:id="@+id/tv_macn"
            android:text="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#fff"
            android:layout_width="80dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/marterialYellow"
                android:id="@+id/tv_hoten"
                android:text="Họ tên"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_phai"
                android:text="Phái"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Năm sinh"
                android:id="@+id/tv_namsinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Ngay nhan việc"
                android:id="@+id/tv_ngaynv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="10000"
                android:id="@+id/tv_luongcb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã xưởng: "/>

                <TextView
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="mapx"
                    android:id="@+id/tv_mapx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>